<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Kiez Helper</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <div class="index-cont mx-auto p-4">
      <h2 class="text-center my-3">Signup</h2>

      <form action="/signup" method="POST" id="form-container" enctype="multipart/form-data">
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email"  class="form-control" type="text" name="email" placeholder="Your Email Address">
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input id="username"  class="form-control" type="text" name="username" placeholder="Your username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
        </div>
        <div class="form-group">
          <label for="photo">Upload profile picture</label><br>
          <input type="file" name="photo">
        </div>

        <br>
        {{#if message }}
          <div class="error-message">{{ message }}</div>
        {{/if}}

        <br><br>

        <button type="submit" class="btn btn-primary mb-3">Create account</button>

        <p class="account-message">
          Do you already have an account?
          <a href="/login">Login</a>
        </p>
      </form>
    </div>
    <script src='/javascripts/script.js'></script>
  </body>
</html>
