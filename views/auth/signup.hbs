<!-- views/auth/signup.hbs -->
<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <div class="form-group">
    <label for="email">Email</label>
    <input id="email"  class="form-control" type="text" name="email" placeholder="Your Email Address">
  </div>
  <div class="form-group">
    <label for="username">Username</label>
    <input id="username"  class="form-control" type="text" name="username" placeholder="Your username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
  </div>
  <div class="form-group">
    <label for="image">Upload image</label><br>
    <input type="file" name="photo">
  </div>

  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button type="submit" class="btn btn-primary mb-3">Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>
